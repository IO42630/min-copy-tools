# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = off


[*.md]
ij_markdown_max_lines_around_header = 1
ij_markdown_max_lines_around_block_elements = 1
